{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.fontFamily": "HackGenNerd, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 13,
  "stylelint.validate": ["css", "scss"],
  "css.validate": false,
  "scss.validate": false
}
