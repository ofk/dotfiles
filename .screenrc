# Encoding
defutf8 on
defencoding UTF-8
encoding UTF-8 UTF-8

# Keybind
# remove screenlock
bind x
bind ^x
# jump tab
bindkey ^B command -c plus10
bind 0 select 0
bind 1 select 1
bind 2 select 2
bind 3 select 3
bind 4 select 4
bind 5 select 5
bind 6 select 6
bind 7 select 7
bind 8 select 8
bind 9 select 9

# View
startup_message off
autodetach on
vbell off
defbce on
altscreen on

caption always "%{= wk} %-Lw%{=bu dr}%n%f %t%{= wk}%+Lw %=%H LoadAvg: %l  %c:%s "
hardstatus alwayslastline
shelltitle "$ |shell"

termcapinfo xterm* ti@:te@
term xterm-256color
shell $SHELL
